<% if @post.errors.any? %>
  <div class="error explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@post.errors.count, "error") %>
    </div>
    </ul>
      <% @post.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <%end%>
    </ul>
  </div>
<%end%>
<p></p>
