<%= provide(:title, 'Admin') %>
<h1>Administration</h1>

<% @users.each do |user| %>
<div class="row">
  <div class="span1 offset1">
    <%= gravatar_for user, size: 52 %>    
  </div>
  <div class = "span2">
    <%= link_to user.full_name, edit_user_path(user) %>
  </div>
  <div class = "span3" %>
  <a href="mailto:<% user.email%>"><%= user.email %></a>
  </div>
  <div class = "span1">
    <% if current_user.admin? && !current_user?(user) %>
      <%= link_to "delete", user, method: :delete, confirm: "Are you sure?" %>
    <%end%>
  </div>
</div>
<p></p>
<%end%>
<div class="row">
  <center><%= link_to "Create User", signup_path, class: "btn btn-large btn-primary" %></center>
</div>
<br />
